@{
  Layout = "_Layout";
}

@using System.Security.Claims

@model IEnumerable<Bakery.Models.Flavor>

<h2>Here is your list of flavors, @User.Identity.Name</h2>
<hr />
@if (Model.Any())
{
    <ul>
        @foreach (var listFlavor in Model)
        {
            <li>@Html.ActionLink($"{listFlavor.Description}", "Details", new { id = listFlavor.FlavorId })</li>
        }
    </ul>
}
else
{
    <p>No flavors have been added yet!</p>
}

@Html.ActionLink("Create new", "Create")